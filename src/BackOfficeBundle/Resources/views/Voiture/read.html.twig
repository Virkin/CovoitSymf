{% extends 'BackOfficeBundle::Default/backOffice.html.twig' %}
{% set current = 'Voiture' %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block body %}

{% if voitures == NULL %}
	<div class="ui raised very padded text container segment">
	  <h2 class="ui header">Pas de voiture</h2>
	  	<a href="addVoiture">
			<div class="ui right floated small primary labeled icon button">
	  			<i class="plus icon"></i> Add Car
			</div>
		</a>
	</div>
{% else %}
	<div class="ui container segment">
	  	<table class="ui celled table">
			<thead>
		        <tr>
			        <th>Id</th>
		         	<th>Marque</th>
		         	<th>Mod√®le</th>
		         	<th>Place(s)</th>
		         	<th>
		         		<a href="addVoiture">
			        		<div class="ui right floated small primary labeled icon button">
			          			<i class="plus icon"></i> Add Car
			        		</div>
			        	</a>
		         	</th>
		        </tr>
	      	</thead>
	      	<tbody>
			{% for voiture in voitures %}
				<tr>
					<td>{{voiture.id}}</td>
					<td>{{voiture.marque}}</td>
					<td>{{voiture.modele}}</td>
					<td>{{voiture.nbPlaces}}</td>
					<td>
						<div class="ui buttons">
							  <div class="ui yellow icon inverted button">
							  	<i class="edit icon"></i>
							  </div>
							  <a href="delete/{{voiture.id}}">
								  <div class="ui red icon inverted button">
								  	<i class="trash icon"></i>
								  </div>
							  </a>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endif %}

{% endblock %}

{% block footer %}
	{{ parent() }}
{% endblock %}