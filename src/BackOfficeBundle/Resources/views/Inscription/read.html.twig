{% extends 'BackOfficeBundle::Default/backOffice.html.twig' %}
{% set current = 'Inscription' %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block body %}

{% if trajets == NULL %}
	<div class="ui raised very padded text container segment">
	  <h2 class="ui header">Pas de trajet libre</h2>
	</div>
{% else %}
	<div class="ui container segment">
	  	<table class="ui celled table">
			<thead>
		        <tr>
			        <th>Id</th>
			        <th>Dep</th>
		         	<th>Arr</th>
		         	<th>Nb Place(s)</th>
		     		<th></th>
		        </tr>
	      	</thead>
	      	<tbody>
			{% set i = 0 %}
			{% for trajet in trajets %}
				<tr>
					<td>{{trajet.id}}</td>
					<td>{{trajet.villeDep}}</td>
					<td>{{trajet.villeArr}}</td>
					<td>{{trajet.nbPlaces - nbPassagers[i] - 1}}</td>
					<td>
						<a href="participant/{{trajet.id}}">
							<div class="ui primary icon button">
							  	<i class="group icon"></i> Participants
							</div>
						</a>
					</td>
				</tr>
				{% set i = i + 1 %}
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endif %}

{% endblock %}

{% block footer %}
	{{ parent() }}
{% endblock %}