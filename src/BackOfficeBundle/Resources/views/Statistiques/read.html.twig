{% extends 'BackOfficeBundle::Default/backOffice.html.twig' %}
{% set current = 'Stats' %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block body %}

{% if nb_internautes == NULL %}
  
  <div class="ui raised very padded text container segment">
    <h2 class="ui header">Pas de données</h2>
  </div>

{% else %}

  <div class="ui container segment">
    <div class="ui huge label">
      <i class="user icon"></i> {{nb_internautes}}
    </div>
    <div class="ui huge label">
      <i class="user icon"></i> {{nb_big_internautes}}
    </div>

    <table class="ui celled table">
      <thead>
            <tr>
              <th>Top Ville Arrivée</th>
            </tr>
          </thead>
          <tbody>
      {% for ville in topVilleArr %}
        <tr>
          <td>{{ville.name}}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    <table class="ui celled table">
      <thead>
            <tr>
              <th>Top Ville Départ</th>
            </tr>
          </thead>
          <tbody>
      {% for ville in topVilleDep %}
        <tr>
          <td>{{ville.name}}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endif %}

{% endblock %}

{% block footer %}
	{{ parent() }}
{% endblock %}
