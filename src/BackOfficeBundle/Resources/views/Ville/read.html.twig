{% extends 'BackOfficeBundle::Default/backOffice.html.twig' %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="ui container segment">
	  	<table class="ui celled table">
			<thead>
		        <tr>
			        <th>Id</th>
		         	<th>Ville</th>
		         	<th>Code postal</th>
		        </tr>
	      	</thead>
	      	<tbody>
			{% for ville in villes %}
				<tr>
					<td>{{ville.id}}</td>
					<td>{{ville.ville}}</td>
					<td>{{ville.cp}}</td>
				</tr>
			{% endfor %}
			</tbody>
			<tfoot class="full-width">
			    <tr>
		      		<th></th>
			      	<th colspan="4">
			        	<a href="addVille">
			        		<div class="ui right floated small primary labeled icon button">
			          			<i class="plus icon"></i> Add City
			        		</div>
			        	</a>
			      	</th>
		    	</tr>
		    </tfoot>
		</table>
	</div>
{% endblock %}

{% block footer %}
	{{ parent() }}
{% endblock %}
