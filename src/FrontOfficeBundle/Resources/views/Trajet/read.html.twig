{% extends 'FrontOfficeBundle::Default/frontOffice.html.twig' %}
{% set current = 'Trajet' %}

{% block header %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<div class="ui container segment">
		<form class="pull-left" role="search" id="nav-search-form" method="post" action="{{ path('trajet') }}">
			 <div class="input-group">
				 <input type="text" class="form-control" placeholder="Search" name="input_search">
				 <span class="input-group-btn">
					 <button type="submit" class="btn btn-default">Rechercher</button>
				 </span>
			 </div>
		 </form>
	  	<table class="ui celled table">
			<thead>
		        <tr>
		         	<th>Ville départ</th>
							<th>Ville arrivée</th>
							<th>Nombre kilomètres</th>
							<th>Date</th>
							<th>Nom</th>
							<th>Prénom</th>
		        </tr>
	      	</thead>
	      	<tbody>
			{% for trajet in trajets %}
				<tr>
					<td>{{trajet.villeDep}}</td>
					<td>{{trajet.villeArr}}</td>
					<td>{{trajet.nbKm}}</td>
					<td>{{trajet.date|date('Y-m-d H:i:s')}}</td>
					<td>{{trajet.nom}}</td>
					<td>{{trajet.prenom}}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block footer %}
	{{ parent() }}
{% endblock %}
